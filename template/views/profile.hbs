{{#if userRole}}
    <section>
        <div class="jobs-section">
            <h2>Your Jobs</h2>
            {{#if appliedJobs.length}}
                <div class="job-list">
                    {{#each appliedJobs}}
                        <div class="job-card">
                            <h3>{{this.JobTitle}}</h3>
                            <p class="job-description">{{this.JobDescription}}</p>
                            <p class="job-date">{{this.HourlyWage}}</p>
                            <p class="job-date">{{this.LastDatetoApply}}</p>
                        </div>
                    {{/each}}
                </div>
            {{else}}
                <p>No jobs created yet. Start by posting one!</p>
            {{/if}}
        </div>
    </section>
{{else}}

    <section>
        <div class="jobs-section">
            <h2>Your Applied Jobs</h2>
            {{#if appliedJobs.length}}
                <div class="job-list">
                    {{#each appliedJobs}}
                        <div class="job-card">
                            <h3>{{this.jobID.JobTitle}}</h3>
                            <div class="job-description">{{this.jobID.JobDescription}}</div>
                            <p class="job-date">{{this.jobID.HourlyWage}}</p>
                            <p class="job-date">{{this.jobID.LastDatetoApply}}</p>
                        </div>
                    {{/each}}
                </div>
            {{else}}
                <p class="no-jobs-message">You haven't applied to any jobs yet.</p>
            {{/if}}
        </div>
    </section>
{{/if}}


    <section>
      {{>footer}}
    </section>
    
